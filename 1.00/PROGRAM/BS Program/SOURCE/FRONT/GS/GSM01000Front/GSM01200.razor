@page "/GSM01200"
@inherits R_Page

<R_StackLayout>

    <R_StackLayout Spacing="3" Class="mt-10">
        <R_StackLayout Row="true">
            <R_ItemLayout xs="1" Class="col-lg-1">
                <R_Label>Account</R_Label>
            </R_ItemLayout>
            <R_ItemLayout xs="2" Class="col-lg-2">
                <R_TextBox @bind-Value="@_GSM01200ViewModel.loParameter.CGLACCOUNT_NO"
                           R_ConductorGridSource="@_conductorGridCoACenterRef"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
            <R_ItemLayout xs="3" Class="col-lg-2">
                <R_TextBox @bind-Value="@_GSM01200ViewModel.loParameter.CGLACCOUNT_NAME"
                           R_ConductorGridSource="@_conductorGridCoACenterRef"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>
        </R_StackLayout>
    </R_StackLayout>

    <R_StackLayout Class="mb-3">
        <R_Grid @ref="@_gridCoACenterRef"
                DataSource="@_GSM01200ViewModel.loGridCoACenterList"
                Pageable="true"
                R_ConductorGridSource="@_conductorGridCoACenterRef"
                R_GridType="@R_eGridType.Original"
                AllowAddNewRow="false"
                AllowDeleteRow="false"
                AllowEditRow="false"
                R_ServiceGetListRecord="@GridCoACenter_R_ServiceGetListRecord">
    
            <R_GridColumns>
                <R_GridTextColumn FieldName="CCENTER_CODE" HeaderText="CENTER CODE" />
                <R_GridTextColumn FieldName="CCENTER_NAME" HeaderText="User Name" />
                <R_GridTextColumn FieldName="CUPDATE_BY" HeaderText="Last Updated By" />
                <R_GridTextColumn FieldName="DUPDATE_DATE" HeaderText="Last Updated Date" />
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>
    
    <R_StackLayout Row="true" Spacing="3">
        <R_ItemLayout xs="1">
             <R_Popup R_Before_Open_Popup="R_Before_Open_Popup" R_After_Open_Popup="R_After_Open_Popup">
                Assign Center
             </R_Popup>
        </R_ItemLayout>
    </R_StackLayout>

</R_StackLayout>

<R_ConductorGrid  @ref="@_conductorGridCoACenterRef"
              R_ViewModel="@_GSM01200ViewModel"
              R_DisableCancelConfirmation="false"
              R_ConvertToGridEntity="@R_ConvertToGridEntity">
</R_ConductorGrid>
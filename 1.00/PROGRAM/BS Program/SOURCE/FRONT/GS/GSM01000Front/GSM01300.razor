@page "/GSM01300"
@inherits R_Page



<R_StackLayout Spacing="3" Class="mb-4">
    <R_StackLayout>
        <R_Grid @ref="@_gridGoARef"
                DataSource="@_GSM01300ViewModel.loGridGoAList"
                Pageable="true"
                R_ConductorGridSource="_conductorGridGoARef"
                R_GridType="@R_eGridType.Original"
                R_ServiceGetListRecord="@GridGoA1300_R_ServiceGetListRecord"
                AllowAddNewRow="false"
                AllowEditRow="false"
                AllowDeleteRow="false">
        
            <R_GridColumns>
                <R_GridTextColumn FieldName="CGOA_CODE" HeaderText="Group Of Account" R_EnableAdd="false" R_EnableEdit="false"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CGOA_NAME" HeaderText="Group Of Account Name" R_EnableAdd="false" R_EnableEdit="false"/>
                <R_GridTextColumn FieldName="CBSIS_DESCR" HeaderText="BS/IS" R_EnableAdd="false" R_EnableEdit="false"/>
                <R_GridTextColumn FieldName="CDBCR_DESCR" HeaderText="D/C" R_EnableAdd="false" R_EnableEdit="false"/>
                <R_GridTextColumn FieldName="CUPDATE_BY" HeaderText="Updated By" R_EnableAdd="false" R_EnableEdit="false"/>
                <R_GridTextColumn FieldName="DUPDATE_DATE" HeaderText="Updated Date" R_EnableAdd="false" R_EnableEdit="false"/>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>
</R_StackLayout>

<R_StackLayout>
    <R_StackLayout Spacing="3" Class="mt-2">
        <R_StackLayout Row="true">
            <R_ItemLayout col="2">
                <R_Label>Group Of Account</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2" Class="col-lg-2">
                <R_TextBox @bind-Value="@_GSM01310ViewModel.Data.CGOA_CODE"
                           R_ConductorGridSource="@_conductorGoACoARef">
                </R_TextBox>
            </R_ItemLayout>
            <R_ItemLayout col="3" Class="col-lg-2">
                <R_TextBox @bind-Value="@_GSM01310ViewModel.Data.CGOA_NAME"
                           R_ConductorGridSource="@_conductorGoACoARef">
                </R_TextBox>
            </R_ItemLayout>
        </R_StackLayout>
    </R_StackLayout>

    <R_StackLayout Class="mb-3">
        <R_Grid @ref="@_gridGoACoARef"
                DataSource="@_GSM01310ViewModel.loGridGoACoAList"
                Pageable="true"
                R_ConductorGridSource="@_conductorGoACoARef"
                R_GridType="@R_eGridType.Original"
                AllowAddNewRow="false"
                AllowDeleteRow="false"
                AllowEditRow="false"
                R_ServiceGetListRecord="@GridGoACoA_ServiceGetListRecord">
    
            <R_GridColumns>
                <R_GridTextColumn FieldName="CGLACCOUNT_NO" HeaderText="Account No" />
                <R_GridTextColumn FieldName="CGLACCOUNT_NAME" HeaderText="Account Name" />
                <R_GridTextColumn FieldName="CBSIS_DESCR" HeaderText="BS/IS" />
                <R_GridTextColumn FieldName="CDBCR_DESCR" HeaderText="D/C" />
                <R_GridTextColumn FieldName="CUPDATE_BY" HeaderText="Updated By" />
                <R_GridTextColumn FieldName="DUPDATE_DATE" HeaderText="Updated Date" />
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>
   <R_StackLayout Row="true" Spacing="3">
          <R_ItemLayout col="1">
               <R_Popup R_Before_Open_Popup="R_Before_Open_Popup" R_After_Open_Popup="R_After_Open_Popup">
                  Assign COA
               </R_Popup>
          </R_ItemLayout>
        <R_ItemLayout col="1">
            <R_Popup R_Before_Open_Popup="R_Before_Open_PopupPrint" R_After_Open_Popup="R_After_Open_PopupPrint">
                Print
            </R_Popup>
        </R_ItemLayout>
      </R_StackLayout>
</R_StackLayout>



<R_ConductorGrid @ref="@_conductorGridGoARef"
                 R_ViewModel="@_GSM01300ViewModel"
                 R_IsHeader="true"
                 R_Display="@GridGoA_Display"
                 R_ServiceGetRecord="@Grid_R_ServiceGetGridGoA"
                 R_ConvertToGridEntity="@R_ConvertToGridEntity"/>

<R_ConductorGrid  @ref="@_conductorGoACoARef"
              R_ViewModel="@_GSM01310ViewModel"
              R_ConductorParent="@_conductorGridGoARef"
              R_DisableCancelConfirmation="false">
</R_ConductorGrid>

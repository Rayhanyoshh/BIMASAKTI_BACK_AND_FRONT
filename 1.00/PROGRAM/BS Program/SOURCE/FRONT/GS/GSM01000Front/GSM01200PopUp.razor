@using GSM01000Common.DTOs;
@inherits R_Page
<R_StackLayout Row>
    <R_Grid @ref="@_gridCenterListToAssignRef"
            DataSource="_GSM1200ViewModel.CenterToAssignList"
            R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
            R_ConductorGridSource="_ConAssignCenterRef"
            R_GridType="@R_eGridType.Batch"
            AllowAddNewRow="false"
            AllowDeleteRow="false"
            AllowEditRow="false"
            Pageable
            PageSize="10">
        <R_GridColumns>
              <R_GridCheckBoxSelectColumn FieldName="@nameof(AssignCenterDTO.LSELECTED)"
                                                            R_EnableAdd
                                                            R_EnableEdit
                                                            ShowSelectAllHeader/>
            <R_GridTextColumn FieldName="CCENTER_CODE" HeaderText="Center Code"></R_GridTextColumn>
            <R_GridTextColumn FieldName="CCENTER_NAME" HeaderText="Center Name"></R_GridTextColumn>
        </R_GridColumns>
    </R_Grid>
</R_StackLayout>

<R_StackLayout Row Class="justify-content-start">
    <R_ItemLayout col="2">
        <R_Button OnClick="Button_OnClickOkAsync">
            Process
        </R_Button>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_Button OnClick="Button_OnClickCloseAsync">
            Cancel
        </R_Button>
    </R_ItemLayout>
</R_StackLayout>


<R_ConductorGrid @ref="@_ConAssignCenterRef"
        R_ViewModel="@_GSM1200ViewModel"
        R_BeforeSaveBatch="@R_BeforeSaveBatch"
        R_AfterSaveBatch="@R_AfterSaveBatch"
        R_ServiceSaveBatch="@R_ServiceSaveBatch"
        R_IsHeader="true" />